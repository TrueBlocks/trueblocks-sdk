  "license": "GPL-3.0-or-later",
  "description": "Use the TrueBlocks chifra interface in your apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rm -fR dist && node_modules/.bin/tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
